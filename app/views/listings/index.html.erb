

<h1>Listings</h1>

<table>
  
  <thead>
    <tr>
      <th>Property name</th>
      <th>Price</th>
      <th>Description</th>
      <th>User</th>
      <th>Photos of the Property</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @listings.each do |listing| %>
      
      <tr>
        <td><%= listing.property_name %></td>
        <td><%= listing.price %></td>
        <td><%= listing.description %></td>
        <td><%= listing.user.email %></td>

        <td> <% listing.images.each_with_index do |images| %>
      <img src="<%=listing.images[0].url %>"height="42" width="42"/></td>

        <td><%= link_to 'Show', listing %></td>
        <td><%= link_to 'Edit', edit_listing_path(listing) %></td>
        <td><%= link_to 'Destroy', listing, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
    <% end %>

  </tbody>
</table>

<br>

<%= link_to 'New Listing', new_listing_path %>
    </div>
  </div>
</div>


